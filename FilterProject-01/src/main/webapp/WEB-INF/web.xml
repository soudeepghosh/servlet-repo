<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>FilterProject-01</display-name>
  
  <servlet>
    <servlet-name>TargetServlet</servlet-name>
    <servlet-class>in.pwskills.nitin.controller.TargetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TargetServlet</servlet-name>
    <url-pattern>/target</url-pattern>
  </servlet-mapping>
  
  <!-- Configured filter for URL PATTERN called /target -->
  <filter>
    <filter-name>DemoFilter</filter-name>
    <filter-class>in.pwskills.nitin.filter.DemoFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DemoFilter</filter-name>
    <url-pattern>/target</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
</web-app>